<div class="container">
  <div class="page-header">
    <h1>骆驼信贷管理系统 <small>还在用手记账？赶紧申请使用吧！</small></h1>
  </div>

  <p class="lead">马上试用吧！</p>
  <%= form_for(resource, html: { class: "form-inline", role: "form" }, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

    <div class="well">
      <div class="form-group">
        <%= f.text_field :tenant, :autofocus => true, class: "form-control", placeholder: "Company Name" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation"  %>
      </div>

      <div class="form-group">
        <%= f.submit "Create your account now", class: "btn btn-lg btn-success" %>
      </div>
    </div>
  <% end %>
</div>
