<div class="container">
  <%= form_for(resource, html: { class: "form-devise", method: :post }, as: resource_name, url: confirmation_path(resource_name)) do |f| %>

    <h2 class="form-devise-heading">Resend confirmation</h2>

    <%= devise_error_messages! %>

    <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email" %>

    <%= f.submit "Resend confirmation instructions", class: "btn btn-lg btn-success pull-right" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
