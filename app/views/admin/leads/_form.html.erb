<div class="row well">
  <%= render "admin/shared/navigation" %>

  <div class="col-md-9">
    <div class="well">
      <%= form_for([:admin, @lead], html: { class: "form-horizontal", role: "form" }) do |f| %>
        <h3>Manage Lead</h3>

        <% if @lead.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

            <ul>
            <% @lead.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :contact_name, class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
            <%= f.text_field :contact_name, autofocus: true, class: "form-control", placeholder: "Name" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :contact_phone, class: "col-lg-3 control-label" %>
          <div class="col-lg-3">
            <%= f.text_field :contact_phone, autofocus: true, class: "form-control", placeholder: "Phone" %>
          </div>
          <%= f.label :contact_email, class: "col-lg-3 control-label" %>
          <div class="col-lg-3">
            <%= f.text_field :contact_email, autofocus: true, class: "form-control", placeholder: "Email" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :contact_address, class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
            <%= f.text_area :contact_address, autofocus: true, class: "form-control", placeholder: "Address" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :contact_income, class: "col-lg-3 control-label" %>
          <div class="col-lg-6">
            <%= f.text_field :contact_income, autofocus: true, class: "form-control", placeholder: "Income" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-offset-3 col-lg-5">
            <%= f.submit "Submit", class: "btn btn-success" %>
            <%= link_to "Cancel", admin_leads_url, class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
